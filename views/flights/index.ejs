<%- include('../partials/header') %>

<h2>List of Flights</h2>
<div class="table-container">
<table>
    <thead>
        <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight Number</th>
            <th>Departs</th>
        </tr>
    </thead>
    <tbody>
        <% flights.forEach(function(f) { %>
            <tr>
                <td><%= f.airline  %></td>
                <td><%= f.airport  %></td>
                <td><%= f.flightNo  %></td>
                <td><%= f.departs  %></td>
            </tr>
        <% }); %>
    </tbody>
</table>
</div>

<%- include('../partials/footer') %>
